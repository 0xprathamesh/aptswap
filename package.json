{
  "name": "cross-swaps",
  "version": "1.0.0",
  "description": "Cross-chain swap protocol extending 1inch to unsupported chains",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:extended": "npm run build && node test-extended-sdk.js",
    "test:client": "npm run build && npx ts-node src/client/extended-client-example.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "forge:build": "forge build",
    "forge:test": "forge test",
    "forge:deploy": "forge script DeployEscrowFactory --rpc-url $RPC_URL --broadcast --verify"
  },
  "keywords": [
    "cross-chain",
    "swap",
    "1inch",
    "aptos",
    "ethereum",
    "defi"
  ],
  "author": "Cross-Swaps Team",
  "license": "MIT",
  "dependencies": {
    "@1inch/byte-utils": "2.6.0",
    "@1inch/cross-chain-sdk": "^0.1.8",
    "@aptos-labs/ts-sdk": "^4.0.0",
    "aptos": "^1.21.0",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^4.0.1",
    "swagger-ui-express": "^5.0.0",
    "web3": "^4.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
